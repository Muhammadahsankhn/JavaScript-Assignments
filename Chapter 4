//          Qno 3


var Name = "Variable names can only contain letters, numbers, $, and _. For example: $my_1stVariable.";
var Varriable = "Variables must begin with a letter, $, or _. For example: $name, _name, name.";
var product = "Variable names are case-sensitive.";
var store = "Variable names should not be JavaScript keywords.";

document.write ( `
    <h1>Rules for Naming JavaScript Variables</h1>
    <p>${Name}</p>
    <p>${Varriable}</p>
    <p>${product}</p>
    <p>${store}</p>
);
